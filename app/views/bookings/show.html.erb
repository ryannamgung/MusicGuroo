<h1>Your booking</h1>

<%= @booking.student.name %><br>
<%= @booking.teacher.name %><br>
<%= @booking.lesson.instrument.name %><br>
<%= @booking.time.strftime("%A, %d %b %Y %l:%M %p") %>


<h3>Write A Review: </h3>

<%= form_for @review do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 1, max: 5, value: 5 %><br><br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.hidden_field :booking_id, :value => @booking.id %>
  <%= f.submit %>
<% end %>


<%= link_to 'My profile', student_path(current_user) %>
