<h1><%= @lesson.instrument.name%></h1>
<%= @lesson.difficulty %><br>
<%= @lesson.genre %>

<br>

<h1>FORM TO BOOK</h1>

<%= form_for @booking do |f| %>
  <%= f.select :time, @lesson.teacher.available_slots %>
  <%= f.hidden_field :lesson_id, :value => @lesson.id %>
  <%= f.hidden_field :student_id, :value => current_user.id %>
  <%= f.submit %>
<% end %>
