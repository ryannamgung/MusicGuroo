<!DOCTYPE html>
<html>
  <head>
    <title>MusicGuroo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <h1>WELCOME TO MUSIC GUROO!</h1>
      <%= button_to "Logout", logout_path, method: :delete %>
      <hr>
    <% else %>
      <%= link_to "Sign up to become a Student!", new_student_path %>
      <%= link_to "Sign up to become a Guroo!", new_teacher_path %>
      <%= link_to "Login", login_path %>
      <hr>
    <% end %>

    <%= yield %>
  </body>
</html>
